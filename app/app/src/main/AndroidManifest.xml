<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pc.project">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proiect">
        <activity
            android:name=".Activities.Trip.ViewTrip"
            android:label="@string/title_activity_view_trip"
            android:theme="@style/Theme.Proiect.NoActionBar"
            android:parentActivityName=".Activities.NavigationDrawerActivity">

        </activity>
        <activity android:name=".Activities.Trip.UpdateTrip"
            android:label="Update Trip"
            android:parentActivityName=".Activities.NavigationDrawerActivity"/>
        <activity android:name=".Activities.Trip.NewTrip"
            android:label="New trip"
            android:parentActivityName="pc.project.Activities.NavigationDrawerActivity"/>
        <activity android:name=".Activities.LoginActivity" />
        <activity
            android:name=".Activities.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.Proiect.NoActionBar" />
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>