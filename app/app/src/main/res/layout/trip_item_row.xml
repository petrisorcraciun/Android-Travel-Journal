<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewTrip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:weightSum="4">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/nav_header_desc"
                android:src="@drawable/hawaii"
                android:scaleType="fitXY"

/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="4sp"
            android:weightSum="4">

            <TextView
                android:id="@+id/tripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:text="Title"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tripDestionation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:text="Destionation" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:id="@+id/tripType"
                android:src="@drawable/ic_baseline_montains_24"
                 />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:weightSum="3">

               <TextView
                   android:id="@+id/tripPrice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:text="Price"
                   android:layout_weight="3"/>

               <RatingBar
                   android:id="@+id/tripRating"
                   style="@style/Widget.AppCompat.RatingBar.Small"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:isIndicator="true"
                   android:numStars="0"
                   android:paddingTop="2dp"
                   android:stepSize="1"
                   android:layout_marginRight="15dp"
                   android:layout_weight="1"
                   />

           </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                />

<!--            <ImageButton-->
<!--                android:layout_width="20dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:id="@+id/options"-->
<!--                android:src="@drawable/ic_baseline_menu_24"-->
<!--                android:onClick="showOptions"/>-->

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:id="@+id/fav"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>